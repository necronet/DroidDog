<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/username"></TextView>
	<EditText android:id="@+id/txtuser" android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<requestFocus></requestFocus>
	</EditText>
	<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/password"></TextView>
	<EditText android:id="@+id/txtpassword" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:inputType="textPassword"></EditText>
	<Button android:id="@+id/btnaccesar" android:layout_width="wrap_content"
		android:text="@string/login" android:layout_height="wrap_content"></Button>
</LinearLayout>
